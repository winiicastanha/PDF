{
  "compilerOptions": {
    "module": "commonjs", // Use "esnext" se preferir, mas "commonjs" funciona bem com Node.js
    "target": "es6",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
